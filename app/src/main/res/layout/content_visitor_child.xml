<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_layout_vistor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.asadfiaz.BasicAlgorithmVisualizer.VisitorChildActivity"
    tools:showIn="@layout/app_bar_visitor_child">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fragment"
            android:name="com.example.asadfiaz.BasicAlgorithmVisualizer.IntroductionFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            tools:layout="@layout/fragment_introduction" />
    </ScrollView>

</RelativeLayout>
